<div class="item">
    <h2>Chef</h2>
    <div>
        <select name="chef_id" id="chef_id" required>
            <option value="" disabled selected>Selecione um chef</option>
            {% for chef in chefs %}
                <option value="{{chef.id}}" {% if chef.id == recipe.chef_id %}selected{% endif %}>{{chef.name}}</option>
            {% endfor %}
        </select>
    </div>
</div>

<div class="item">
    <h2>Imagem da receita</h2>
    <div>
        <input 
            type="url"
            name="image"
            value="{{recipe.image}}"
        >
    </div>
</div>


<div class="item">
    <h2>Nome da receita</h2>
    <div>
        <input 
            type="text"
            name="title"
            value="{{recipe.title}}"
        >
    </div>
</div>

<div class="item" id="ingredients">
    <h2>Ingredientes</h2>
    {% for ingredient in recipe.ingredients %}
        <div class="ingredient">
            <input 
                type="text"
                name="ingredients[]"
                value="{{ingredient}}"
            >
         </div>
    {% else %}
        <div class="ingredient">
            <input 
                type="text"
                name="ingredients[]"
                value="{{ingredient}}"
            >
        </div>
    {% endfor %}
    
</div>

<button type="button" class="add add-ingredient" onclick="AddField('ingredient')">Adicionar novo ingrediente</button>

<div class="item" id="preparations">
    <h2>Modo de preparo</h2>
    {% for preparation in recipe.preparation %}
        <div class="preparation">
            <input 
                type="text"
                name="preparation[]"
                value="{{preparation}}"
            >
         </div>
    {% else %}
        <div class="preparation">
            <input 
                type="text"
                name="preparation[]"
                value="{{preparation}}"
            >
        </div>
    {% endfor %}
</div>

<button type="button" class="add add-preparation" onclick="AddField('preparation')">Adicionar novo passo</button>


<div class="item">
    <h2>Informações adicionais</h2>
    <div class="information">
        <textarea
            type="text"
            name="information"
        >{{recipe.information}}</textarea>
    </div>
</div>
