{% extends "layout.njk" %}


{% block content %}
    <div class="box-top-recipes container">
        <div class="cards">
            {% for recipe in recipes %}
                <div class="card" onclick= "ChangePath({{recipes.indexOf(recipe)}})" >
                    <div class="recipes-image">
                        <img src="{{recipe.recipe_url}}" alt="Receita de {{recipe.title}}">
                    </div>

                    <div class="recipes-info">
                        <h1>{{recipe.title}}</h1>
                        <p>por {{recipe.author}}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <script>
        document.querySelector(".recipes").classList.add("active")
    </script>

{% endblock content %}