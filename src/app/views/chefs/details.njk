{% extends "adminLayout.njk" %}


{% block content %}
    <div class="details chefs container">
        <div class="action">
            <h1>Chef: {{chef.name}}</h1>
            <a href="/admin/chefs/{{chef.id}}/edit" class="button">Editar Chef</a>
        </div>

        <div class="imageChef">
            <img src="{{chef.avatar_url}}" alt="Chef {{chef.name}}">
        </div>

        <div class="title">
            {% set count = 0 %}
            <h1>{{chef.name}}</h1>
            <p>{% for recipe in recipes_chef %}{% set count = count + 1%}{% endfor %} {{ count }} receitas</p>
        </div>
        
        <div class="recipes">
            <h2>Receitas</h2>
            <div class="cards">
            {% for recipe in recipes_chef %}
                <div class="card">
                    <div class="image">
                        <img src="{{recipe.image}}" alt="Foto da receita {{recipe.title}}">
                    </div>
                    <div class="info">
                        <h2>{{recipe.title}}</h2>
                        <p>por {{chef.name}}</p>
                        <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                    </div>
                </div> 
            {% endfor %}
            </div>
        </div>
     </div>

    <script>
        document.querySelector(".chefs").classList.add("active")
    </script>

{% endblock content %}