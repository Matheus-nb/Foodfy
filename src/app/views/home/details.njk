{% extends "layout.njk" %}


{% block content %}
   <div class="details container">
       <div class="image">
           <img src="{{recipe.image}}" alt="Imagem da receita {{recipe.title}}">
       </div>

       <div class="title">
           <h1>{{recipe.title}}</h1>
           <p>por {{name}}</p>
       </div>

       <div class="detail-info">
           <div class="ingredients-info">
               <div class="Show-Not">
                    <h2>Ingredientes</h2>
                    <span onclick="ShowNot('detail-info')">Esconder</span>
               </div>
               
               <ul>
                   {% for ingredient in recipe.ingredients %}
                        <li>{{ingredient}}</li>
                   {% endfor %}
               </ul>
           </div>

           <div class="preparation">
               <div class="Show-Not">
                    <h2>Modo de preparo</h2>
                    <span onclick="ShowNot('preparation')">Esconder</span>
               </div>
               <ul>
                   {% for step in recipe.preparation %}
                        <li>{{step}}</li>
                   {% endfor %}
               </ul>
           </div>
           
            {% if recipe.information %}
                <div class="add-info">
                    <div class="Show-Not">
                        <h2>Informações adicionais</h2>
                        <span onclick="ShowNot('add-info')">Esconder</span>
                    </div>
                    <p>{{recipe.information}}</p>
                </div>
           {% endif %}
       </div>
   </div>



    <script>
        document.querySelector(".recipes").classList.add("active")
    </script>

{% endblock content %}