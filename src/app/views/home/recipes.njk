{% extends "layout.njk" %}


{% block content %}
    <div class="box-top-recipes container">
        {% if term %}
            <h2>Buscando por "{{term}}"</h2>
        {% endif %}
        <div class="cards">
            {% for recipe in recipes %}
                <div class="card" onclick=ChangePath({{recipe.id}})>
                    <div class="recipes-image">
                        <img src="{{recipe.image}}" alt="Foto da receita {{recipe.title}}">
                    </div>
                    <div class="recipes-info">
                        <h1>{{recipe.title}}</h1>
                        <p>por {% for chef in chefs %}{% if recipe.chef_id == chef.id %}{{chef.name}}{% endif %}{% endfor %}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <script>
        document.querySelector(".recipes").classList.add("active")
    </script>

{% endblock content %}