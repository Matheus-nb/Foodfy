
<div class="item">
    <h2>Imagem da receita</h2>
    <div>
        <input 
            type="url"
            name="recipe_url"
            value="{{recipe.recipe_url}}"
        >
    </div>
</div>


<div class="item">
    <h2>Nome da receita</h2>
    <div>
        <input 
            type="text"
            name="title"
            value="{{recipe.title}}"
        >
    </div>
</div>

<div class="item" id="ingredients">
    <h2>Ingredientes</h2>
    {% for ingredient in recipe.ingredients %}
        <div class="ingredient">
            <input 
                type="text"
                name="ingredients[]"
                value="{{ingredient}}"
            >
         </div>
    {% else %}
        <div class="ingredient">
            <input 
                type="text"
                name="ingredients[]"
                value="{{ingredient}}"
            >
        </div>
    {% endfor %}
    
</div>

<button type="button" class="add add-ingredient" onclick="AddField('ingredient')">Adicionar novo ingrediente</button>

<div class="item" id="preparations">
    <h2>Modo de preparo</h2>
    {% for preparation in recipe.preparations %}
        <div class="preparation">
            <input 
                type="text"
                name="preparations[]"
                value="{{preparation}}"
            >
         </div>
    {% else %}
        <div class="preparation">
            <input 
                type="text"
                name="preparations[]"
                value="{{preparation}}"
            >
        </div>
    {% endfor %}
</div>

<button type="button" class="add add-preparation" onclick="AddField('preparation')">Adicionar novo passo</button>


<div class="item">
    <h2>Informações adicionais</h2>
    <div class="information">
        <textarea
            type="text"
            name="information"
        >{{recipe.information}}</textarea>
    </div>
</div>
