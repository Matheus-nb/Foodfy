{% extends "adminLayout.njk" %}


{% block content %}

    <form action="" method="POST" class="container myform">
        <div class="head">
            <h2>Editando receita</h2>

            <div class="buttons">
                <button type="submit" class="button delete" onclick="FormAction('delete')">Deletar</button>
                <button type="submit" class="button" onclick="FormAction('save')">Salvar receitas</button>
            </div>   
        </div>
        
        {% include "admin/fields.njk" %}

        <input type="hidden" name="id" value="{{recipe.id}}">
    </form>

{% endblock content %}